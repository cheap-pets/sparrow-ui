.float-message {
  position: fixed;
  z-index: 210;
  top: 0;
  left: 0;
  right: 0;
  opacity: 0;
  text-align: center;
  color: $white;
  line-height: 20px;
  padding: 12px 15px;
  transform: translateX(100%);
  @mixin shadow;
  @mixin text-ellipsis;
  @mixin transition-all;
}
.float-message.active {
  opacity: 0.8;
  transform: translateX(0);
}
