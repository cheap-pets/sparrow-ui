.modal-mask {
  position: absolute;
}
.modal-mask {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 200;
  padding: 15px;
  display: block;
  position: fixed;
  overflow: hidden;
  visibility: hidden;
  background-color: rgba(0, 0, 0, .15);
  transition: all .3s ease-in-out;
}
.modal-mask.active {
  visibility: visible;
}
